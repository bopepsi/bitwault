<%- include('./partials/_head') %> 
  <body>
    <%- include('./partials/_header') %> 
    <main>
        <form action="/new" method="post">
          <p class="input_sec">
            <label for="web_type">Category</label>
            <select name="web_type" id="web_type">
                <option value="entertainment">entertainment</option>
                <option value="social">social</option>
                <option value="work">work</option>
                <option value="finance">finance</option>
                <option value="shopping">shopping</option>
                <option value="health">health</option>
                <option value="pets">pets</option>
                <option value="home">home</option>
                <option value="study">study</option>
            </select>
          </p>
          <p class="input_sec">
            <label for="website_url">Url</label>
            <input type="url" name="website_url">
          </p>
          <p class="input_sec">
            <label for="user_email">User Email</label>
            <input type="text" name="user_email">
          </p>
          <hr>
          <p class="input_sec">
            <fieldset>
              <legend>Password requirements</legend>
                <label for="passwordlength"><i>Password length</i></label>
                <input type="number" name="passwordlength" id="passwordlength" step="1">
                <section class="password-requirements-container">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="lowercase" name="lowercase">
                  <label class="form-check-label" for="lowercase">
                    <i>Lowercase</i>
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="uppercase" name="uppercase">
                  <label class="form-check-label" for="uppercase">
                    <i>Uppercase</i>
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="number" name="number">
                  <label class="form-check-label" for="number">
                    <i>Number</i>
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="specialchar" name="specialchar">
                  <label class="form-check-label" for="special-chars">
                    <i>Special-chars</i>
                  </label>
                </div>
                </section>
            </fieldset>
          </p>
          <hr>

          <div id="actions">
            <button type="reset" id="btn-clear-content">Clear</button>
            <button id="btn-submit-content">Submit</button>
          </div>
            
        </form>
    </main>
    <%- include('./partials/_footer') %> 
  </body>
</html>
