<%- include('./partials/_head') %>
  <body>
    <%- include('./partials/_header') %>
    <main>
        <form id="urlsubmissionform" action="/new" method="post">
          <p class="input_sec">
            <label for="web_type">web_type</label>
            <select name="web_type" id="web_type">
                <option value="entertainment">entertainment</option>
                <option value="social">social</option>
                <option value="work">work</option>
                <option value="finance">finance</option>
                <option value="shopping">shopping</option>
                <option value="health">health</option>
                <option value="pets">pets</option>
                <option value="home">home</option>
                <option value="study">study</option>
            </select>
          </p>
          <p class="input_sec">
            <label for="website_url">website_url</label>
            <input id="website_url" type="url" name="website_url">
          </p>
          <p class="input_sec user_email">
            <label for="user_email">userEmail</label>
            <input id="user_email" type="text" name="user_email">
          </p>
          <p class="input_sec">
            <fieldset id="requirements">
              <legend>password requirements</legend>
                <label for="passwordlength">password length</label>
                <input type="number" name="passwordlength" id="passwordlength" step="1">
                <div class="form-check">
                  <input id="lowercase" class="form-check-input" type="checkbox" value="0" name="lowercase">
                  <label class="form-check-label" for="lowercase">
                    lowercase
                  </label>
                </div>
                <div class="form-check">
                  <input id="uppercase" class="form-check-input" type="checkbox" value="0" name="uppercase">
                  <label class="form-check-label" for="uppercase">
                    uppercase
                  </label>
                </div>
                <div class="form-check">
                  <input id="number" class="form-check-input" type="checkbox" value="0" name="number">
                  <label class="form-check-label" for="number">
                    number
                  </label>
                </div>
                <div class="form-check">
                  <input id="specialchar" class="form-check-input" type="checkbox" value="0" name="specialchar">
                  <label class="form-check-label" for="special-chars">
                    special-chars
                  </label>
                </div>
            </fieldset>
          </p>
          <div>
            <button type="reset">Clear</button>
            <button id="disabledsubmit" type="submit">Submit</button>
          </div>

        </form>
    </main>
    <%- include('./partials/_footer') %>
  </body>
</html>
