<section class="webinfo-detail">
  
  <div class="confirm-delete">
    <p>You sure you want to delete?</p>
    <form action="">
      <button type="button">No</button>
      <button>Yes</button>
    </form>
  </div>

  <div class="confirm-edit">
    <p>You are about to update your password?</p>
    <form action="">
      <button type="button">Cancel</button>
      <button>Confirm</button>
    </form>
  </div>

  <div class="webinfo-detail-url">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
      />
    </svg>
    <a href="<%=webinfo_item['website_url'] %>" target="_blank"
      >&nbsp;&nbsp;<%= webinfo_item['website_url']%></a
    >
  </div>

  <!-- <p class="username-pswd-info-username"><%= webinfo_item['username']%></p> -->
  <div class="info-container">
    <input
      type="text"
      class="username-pswd-info-username readonly"
      value="<%=webinfo_item['username']%>"
      readonly
    />

    <div class="username-pswd-info">
      <form class="copy-password">
        <input
          type="password"
          class="username-pswd-info-password readonly"
          value="<%=webinfo_item['password']%>"
          readonly
        />
        <button
          class="copybutton"
          type="button"
          value="<%=webinfo_item['password']%>"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 action"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
            />
          </svg>
        </button>
      </form>
    </div>

    <div class="actions">
      <form
        action="/delete/<%=webinfo_item['website_password_id']%>"
        class="delete-form"
        method="post"
      >
        <input
          type="hidden"
          name="website_id"
          value="<%=webinfo_item['website_id']%>"
        />
        <button class="delete-btn">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
            />
          </svg>
        </button>
      </form>

      <form
        method="post"
        class="edit-form"
        action="/edit/<%=webinfo_item['website_password_id']%>"
      >
        <input
          name="newpassword"
          type="text"
          placeholder="Edit password here"
        />
        <input
          type="hidden"
          name="website_id"
          value="<%=webinfo_item['website_id']%>"
        />
        <button class="edit-btn">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
            />
          </svg>
        </button>
      </form>
    </div>
  </div>
</section>
<hr />
